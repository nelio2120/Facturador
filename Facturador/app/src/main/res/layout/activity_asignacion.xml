<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.activity_asignacion">





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/medianet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:paddingBottom="20dp"
            android:text="BIENVENIDO  "
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >


            <TextView
                android:id="@+id/tzxs"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="20"
                android:text="Comercio"
                android:textColor="@color/colorMedianet"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/editComercio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="20"
                android:text="Equipo"
                android:textColor="@color/colorMedianet"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/editequipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_asignar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:background="@color/colorMedianet"
            android:text="ASIGNAR"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/btn_Cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorMedianet2"
            android:text="CANCELAR"
            android:textColor="@android:color/white"

            />



    <TextView
        android:id="@+id/tcomercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:visibility="invisible"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tequipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:visibility="invisible"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/etActivityComercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/etActivityEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:visibility="invisible"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />

</LinearLayout>